<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/app_backgound"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/activity_bar" />
    <FrameLayout
        android:id="@+id/id_content"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:elevation="5dp"
        android:background="#fff"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/tab_rb_0"
            style="@style/tab_rb_style"
            android:background="@android:color/transparent"
            android:checked="true"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/home_click"
            android:text="首页"
            android:textColor="@color/app_text_backgound"
            android:textSize="12sp" />
        <RadioButton
            android:id="@+id/tab_rb_1"
            style="@style/tab_rb_style"
            android:background="@android:color/transparent"
            android:checked="true"
            android:drawablePadding="2dp"
            android:text="视频"
            android:drawableTop="@drawable/des_click"
            android:textColor="@color/app_text_backgound"
            android:textSize="12sp" />
        <RadioButton
            android:id="@+id/tab_rb_2"
            style="@style/tab_rb_style"
            android:background="@android:color/transparent"
            android:checked="true"
            android:drawablePadding="2dp"
            android:text="雪具"
            android:drawableTop="@drawable/active_click"
            android:textColor="@color/app_text_backgound"
            android:textSize="12sp" />
        <RadioButton
            android:id="@+id/tab_rb_3"
            style="@style/tab_rb_style"
            android:background="@android:color/transparent"
            android:checked="true"
            android:drawablePadding="2dp"
            android:text="个人"
            android:drawableTop="@drawable/my_click"
            android:textColor="@color/app_text_backgound"
            android:textSize="12sp" />
    </RadioGroup>
</LinearLayout>
